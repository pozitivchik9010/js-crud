<main>
	<section>
		<div class="content">
			<h1 class="content__title">Створення товару</h1>
			<form method="POST" , action="/product-create" class="form">
				<div class="form__card">
					<div class="form__content">

						<div class="form__field">
							<label for="name" class="form__label">Назва товару</label>
							<input type="name" name="name" class="form__input">
						</div>
						<div class="form__field">
							<label for="price" class="form__label">Ціна</label>
							<input type="number" name="price" class="form__input">
						</div>

						<div class="form__field">
							<label for="description" class="form__label">Короткий опис товару:</label>
							<input type="text" name="description" class="form__input">
						</div>
					</div><button class="form__button">Створити</button>
				</div>
			</form>
		</div>
	</section>
</main>